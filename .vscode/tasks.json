{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++23",
                "-o",
                "${fileBasenameNoExtension}",
                "${file}"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "compile and run",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "g++ -std=c++23 -o ${fileBasenameNoExtension} ${file}; if ($?) { .\\${fileBasenameNoExtension} }"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "compile debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++23",
                "-g",
                "-o",
                "${fileBasenameNoExtension}",
                "${file}"
            ],
            "group": {
                "kind": "build"
            }
        }
    ]
}